@{
    ViewData["Title"] = "Home Page";
}

@section Scripts
{
    <script src="~/js/signalr-client.js"></script>
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div id="connectionId" class="alert alert-primary" role="alert"></div>

            <button type="button" class="btn btn-success mx-1 my-1" disabled>
                Connected Client Count <span id="span-connected-client-count" class="badge text-bg-secondary"></span>
            </button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-all-client">
                Tüm Client'lara gönder
            </button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-caller-client">
                İstek Yapan Client'a gönder
            </button>

            <button class="btn btn-primary mx-1 my-1" id="btn-send-message-others-client">
                Diğer Client'lara gönder
            </button>

            <div>
                <hr />
                <input type="text" class="form-control mx-1 my-1" id="text-connectionId" placeholder="Connection Id" />
                <button class="btn btn-primary mx-1 my-1" id="btn-send-message-individual-client">
                    Spesifik Client'a gönder
                </button>
            </div>

            <div>
                <hr />
                <div id="groupList" class="alert alert-warning" role="alert"> </div>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupA-add">
                    A grubuna katıl
                </button>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupA-remove">
                    A grubundan ayrıl
                </button>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupB-add">
                    B grubuna katıl
                </button>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupB-remove">
                    B grubundan ayrıl
                </button>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupA-send-message">
                    A grubuna mesaj gönder
                </button>

                <button class="btn btn-primary mx-1 my-1" id="btn-groupB-send-message">
                    B grubuna mesaj gönder
                </button>
            </div>
        </div>
    </div>
</div>
